{% extends 'base.html.twig' %} {% block body %}
<section id="boutiques" class="container-fluid accueil">
    <div class="row">
         <article class="col-12 col-sm-6 col-md-6 m-auto ">
            <div class="card p-3">
                <h1 class="text-center">{{biere.title}}</h1>
                <div class="d-flex align-items-center justify-content-center">
                    <img class="w-25" src="{{biere.img}}" alt="{{biere.title}}" />
                </div>
                <p>{{biere.content}}</p>
            <div class="row justify-content-between card-footer text-muted">
                <p class="text-right">Prix HT: {{biere.getPrixHt}}</p>
                <p class="text-right">Prix TTC: {{biere.getPrixTTC}}</p>
            </div>
            </div>
        </article>
    </div>
</section>

{% endblock %}